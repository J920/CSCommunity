<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/dark_blue</item>
        <item name="colorPrimaryDark">@color/dark_blue</item>
        <item name="colorAccent">@color/dark_blue</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">@color/white</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:fontFamily">@font/cairo_regular</item>
        <item name="backgroundcolor">@color/white</item>
        <item name="cardbackground">@color/white</item>
        <item name="textcolor">#000</item>
        <item name="tintcolor">@color/whiteGrean</item>
        <item name="buttoncolor">@color/whiteGrean</item>
        <item name="android:textColorPrimary">#000</item>


    </style>

    <style name="DarkTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#424242</item>
        <item name="colorPrimaryDark">#303030</item>
        <item name="colorAccent">@color/dark_blue</item>
        <item name="backgroundcolor">#303030</item>
        <item name="cardbackground">#424242</item>
        <item name="textcolor">#fff</item>
        <item name="tintcolor">@color/whiteGrean</item>
        <item name="buttoncolor">@color/whiteGrean</item>
        <item name="android:textColorPrimary">#fff</item>

        <item name="android:fontFamily">@font/cairo_regular</item>

    </style>


</resources>